/*#### SETUP / CONTACT ##########################################################*/

.setup, .contact
	.description
		padding 2em
		border 2em solid transparent
		background linear-gradient(rgba(255,255,255,.5), rgba(255,255,255,.5)) padding-box,
							 url('../img/contact-bk.jpg') border-box 0 / cover
	.section-heading
		padding-top 1em

.contact
	background-size cover
	.description
		& :not(.section-heading)
			text-align center
		.hello
			font-size 2em
		.copy
			font-size 1.3em
			margin-top .8em
			&:nth-child(4)
				color $linkColor
				font-size 1.2em
				line-height 1.5em
				margin-bottom .5em
			.email
				border-bottom 1px dashed transparent
				color $orangeColor
				&:hover
					border-bottom 1px dashed $orangeColor
		.address
			color $orangeColor
			font-size 2em
			letter-spacing .4em
			line-height 1.4em
			span
				display block
		.tel
			font-size 1.2em
			span
				color $orangeColor
		.separator
			color white
			font-size 5em
			letter-spacing -.32em
			margin-left -.32em
			text-shadow 1px 1px 5px #ddd
		.social-links
			font-size 1.2em
			margin-top 1.5em
		ul
			margin-top 1em
			li
				&:not(:first-child)
					margin-left 1em
				a
					color $orangeColor
					font-size 2em

.setup
	img
		display inline-block
		height auto
		margin .5em 0
		width 45%
	.description
		text-align left
		ul
			border-left 4px solid grey
			margin 2em 0 1em 1em
			padding-left 1em
			li
				color grey
				font-style italic
				list-style disc
				margin-left 1em

/*#### TAGS ################################################################*/

.tags
	background-color white
	border-bottom 2px solid $orangeColor
	ul
		background-color white
		li
			margin 0 .3em
			padding .5em 0
			a
				border 1px solid transparent
				color $fontColor
				display block
				font-size .7em
				padding .5em 1em
				text-transform uppercase
				&.selected
					border 1px solid $orangeColor
					color $orangeColor
				&:not(.selected):hover
					border-bottom 1px dashed $orangeColor
	.tags-select
		background white url('../img/down-arrow.png') no-repeat 93% center
		background-size 10px auto
		border 1px solid $orangeColor
		cursor pointer
		display none
		font-size .7em
		margin 1em .5em .5em .5em
		outline 0
		padding .5em .8em
		padding-right 2em
		text-align left
		text-transform uppercase

/*#### LIGHTBOX ################################################################*/

.jslghtbx
	z-index 1000

.jslghtbx-close
	font-size 1em !important
	&:hover
		color $orangeColor

.jslghtbx-contentwrapper
	& > img
		padding .2em !important

.jslghtbx-next,
.jslghtbx-prev
	border none !important
	&:before
		color white
		font-family  FontAwesome
		font-size 1.5em
		position absolute
		top 0
	&:hover
		&:before
			color $orangeColor

.jslghtbx-next
	&:before
		content "\f178"
		left -35px

.jslghtbx-prev
	&:before
		content "\f177"
		right -35px
